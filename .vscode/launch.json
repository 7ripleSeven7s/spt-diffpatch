  "version": "0.2.0",
  //"inputs": [],
  "configurations": [
    {
      "envFile": "${workspaceFolder}\\.env",
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\src\\main.js",
      "outFiles": [
        "${workspaceFolder}/src/main.js"
      ]
    },
    {
      "name": "Launch node-terminal",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}\\src",
      "args":[
        //"${env:USERNAME}"
        "${env:tsc}"
      ]
    }
  ]
}