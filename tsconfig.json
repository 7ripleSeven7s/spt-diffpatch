{
  "compilerOptions": {
    
    /* compiler settings */
    "target": "ES2015",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,
    "strict": false,

    /* URL */
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@spt-diffpatch/*": ["src/*"]
    },
    "outDir": "dist/",
    //"noEmit": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    //"resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "listFiles": true,
    "listEmittedFiles": true
  }
}