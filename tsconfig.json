{
  "compilerOptions": {
    "target": "ES2015", 
    "module": "Preserve", 
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {          
      "*": ["node_modules/*"],                       
      "@spt-diffpatch/*": [
        "src/main.ts",
        "src/*"
      ]
    }, 
    "outDir": "dist/",
    //"noEmit": true,
    "noEmitOnError": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
  }
}